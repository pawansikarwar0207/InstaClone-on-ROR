<section class="vh-100 mb-5" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
              alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">


               <!-- add previous default sign in form  -->

               <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
               <div class="d-flex align-items-center mb-3 pb-1">
                <i class="fa-brands fa-instagram fa-4x me-3"></i>
                <%= image_tag "img.png", id:"insta" %>
              </div>

              <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

              <div class="form-outline mb-4">
                <%= f.label :email, class:"form-label", for:"form2Example17" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form2Example17", class:"form-control form-control-lg" %>
              </div>

              <div class="form-outline mb-4">
                <%= f.label :password, class:"form-label", for:"form2Example27" %><br />
                <%= f.password_field :password, autocomplete: "current-password", id:"form2Example27", class:"form-control form-control-lg" %>
              </div>

              <div class="actions">
                <%= f.submit "Log in", class:"btn btn-dark btn-lg btn-block mb-3 mt-3" %>
              </div>
              <% end %>

              <%= link_to "Forgot password?", new_password_path(resource_name),class:"small text-muted"%>
              <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account?  <%= link_to "Register Here", new_registration_path(resource_name),style:"color: #393f81;" %> </p>




            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
<style>
  #insta{
    width: 40%;
    margin: auto;
    padding: auto;
  }
</style>