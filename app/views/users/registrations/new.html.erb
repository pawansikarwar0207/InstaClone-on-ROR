<section class="vh-100 bg-image mb-5"
style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
<div class="mask d-flex align-items-center h-100 gradient-custom-3">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-9 col-lg-7 col-xl-6">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body p-5">
            <h2 class="text-uppercase text-center mb-3">Create an account</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <div class="form-outline mb-3">
              <%= f.label :full_name, class:"form-label", for:"form3Example1cg" %>
              <%= f.text_field :full_name, id:"form3Example1cg", class:"form-control form-control-md" %>
            </div>

            <div class="form-outline mb-3">
              <%= f.label :contact_number, class:"form-label", for:"form3Example1cg" %>
              <%= f.text_field :contact_number, id:"form3Example1cg", class:"form-control form-control-md" %>
            </div>

            <div class="form-outline mb-3">
              <%= f.label :email,class:"form-label", for:"form3Example3cg" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",id:"form3Example3cg", class:"form-control form-control-md" %>
            </div>

            <div class="form-outline mb-3">
              <%= f.label :password, class:"form-label", for:"form3Example4cg" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", id:"form3Example4cg", class:"form-control form-control-md" %>
            </div>

            <div class="form-outline mb-3">
              <%= f.label :password_confirmation, class:"form-label", for:"form3Example4cdg" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", id:"form3Example4cdg", class:"form-control form-control-md" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class:"btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
              <p class="text-center text-muted mt-5 mb-0">Have already an account? <%= link_to "Login here", new_session_path(resource_name),class:"fw-bold text-body" %> </p>

            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>