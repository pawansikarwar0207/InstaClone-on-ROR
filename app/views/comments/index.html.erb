<div class="col-lg-8 mx-auto">
  <p style="color: green"><%= notice %></p>

  <h1>Comments</h1>

  <div id="comments">
    <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", comment, class: "btn btn-primary mb-2"%>
    </p>
    <% end %>
  </div>

  <%= link_to "New comment", new_comment_path, class: "btn btn-primary mb-2"%>

</div>